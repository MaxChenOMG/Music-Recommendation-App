<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>
  <div class="page">
    <h3>You just entered: <%= genre %></h3>
    <h4>We queried Spotify for playlists related to "<%= genre %>" and here is a list of <%= spotify_data.length %> such playlists:</h4>
    <br>

    <% if (spotify_data.length > 0) { %>
      <% spotify_data.forEach((playlist, index) => { %>
        <h3 class="name"><%= index+1 %>. Name: <%= playlist[0] %></h3>
        <p class='creator'>Creator: <%= playlist[1] %> - <button><a href=<%= playlist[2] %>>Link to playlist</a></button> </p>
        <br>
      <% }) %>
    <% } else { %>
      <p>Didn't find any playlists. Try with another keyword</p>
    <% } %>

  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>
